<idea-plugin>
    <id>dev.ngocta.pycharm-odoo</id>
    <name>PyCharm Odoo</name>
    <vendor email="atw1990@gmail.com" url="https://github.com/trinhanhngoc">Trinh Anh Ngoc</vendor>

    <description><![CDATA[
    Odoo plugin for PyCharm
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="Pythonid">
        <!-- Add your extensions here -->
        <importResolver implementation="dev.ngocta.pycharm.odoo.python.module.OdooAddonsImportResolver"/>
        <pyModuleMembersProvider implementation="dev.ngocta.pycharm.odoo.python.module.OdooAddonsMembersProvider"/>
        <typeProvider implementation="dev.ngocta.pycharm.odoo.python.model.OdooModelFunctionParamTypeProvider" order="first"/>
        <typeProvider implementation="dev.ngocta.pycharm.odoo.python.model.OdooEnvTypeProvider" order="first"/>
        <typeProvider implementation="dev.ngocta.pycharm.odoo.python.model.OdooFieldTypeProvider" order="first"/>
        <inspectionExtension implementation="dev.ngocta.pycharm.odoo.python.OdooPyInspectionExtension"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <fileBasedIndex implementation="dev.ngocta.pycharm.odoo.python.module.OdooModuleIndex"/>
        <fileBasedIndex implementation="dev.ngocta.pycharm.odoo.python.model.OdooModelIndex"/>
    </extensions>
    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>