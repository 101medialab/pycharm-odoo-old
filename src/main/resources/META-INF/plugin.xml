<idea-plugin>
    <id>dev.ngocta.pycharm-odoo</id>
    <name>PyCharm Odoo</name>
    <vendor email="atw1990@gmail.com" url="https://github.com/trinhanhngoc">Trinh Anh Ngoc</vendor>

    <description><![CDATA[
    Odoo plugin for PyCharm
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="Pythonid">
        <!-- Add your extensions here -->
        <importResolver implementation="OdooImportResolver"/>
        <pyModuleMembersProvider implementation="OdooModuleMembersProvider"/>
        <pyClassMembersProvider implementation="OdooClassMembersProvider"/>
        <typeProvider implementation="OdooTypeProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <fileBasedIndex implementation="OdooModuleIndex"/>
        <fileBasedIndex implementation="OdooModelIndex"/>
    </extensions>
    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>